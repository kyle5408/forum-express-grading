<h1>編輯個人資料</h1>

<div class="row">
  <div class="card  col-md-12">
    <div class="d-flex">
      <div class="image col-md-6">
        <img class="card-img-top" src="{{user.image}}" alt="Card image cap">
      </div>
      <div class="col-md-6 mt-2 ml-2">
        <ul class="list-unstyled ">
          <li class="mt-2"><strong>使用者名稱:</strong> {{user.name}}</li>
          <li class="mt-2"><strong>Email:</strong> {{user.email}}</li>
          <li class="mt-2"><strong>權限:</strong>
            {{#ifCond user.isAdmin true}}
            管理員
            {{else}}
            一般使用者
            {{/ifCond}}
          </li class="mt-2">
          {{#if count}} {{count}}個已評論餐廳 {{/if}}
          <li class="mt-2"><strong>帳號建立時間:</strong> {{momentDate user.createdAt}}</li>
          <li class="mt-2"><strong>上次更新:</strong> {{moment user.updatedAt}}</li>
          {{#ifCond edit true}}
          <button type="button" class="btn btn-outline-link mt-2">
            <a href="/users/{{user.id}}/edit">編輯</a>
          </button>
          {{/ifCond}}
        </ul>
      </div>
    </div>
  </div>
</div>

{{!-- 使用者追蹤區 --}}
<div class="row mt-2">
  {{!-- 追蹤中 --}}
  <div class="card col-md-6">
    <div class="card-body">
      <h5 class="card-title"><strong>{{followingCount}}</strong> followings:</h5>

      {{#each user.Followings}}
      <a href="/users/{{this.id}}">
        <img src="{{this.image}}" alt="Card image cap" style="width: 80px; height: 80px">
      </a>
      {{/each}}

    </div>
  </div>

  {{!-- 追蹤者 --}}
  <div class="card col-md-6">
    <div class="card-body">
      <h5 class="card-title"><strong>{{followerCount}}</strong> followers:</h5>

      {{#each user.Followers}}
      <a href="/users/{{this.RestaurantId}}">
        <img src="{{this.image}}" alt="Card image cap" style="width: 80px; height: 80px">
      </a>
      {{/each}}

    </div>
  </div>

</div>

{{!-- 餐廳收藏區 --}}
<div class="row mt-2">
  <div class="card col-md-6">
    <div class="card-body">
      <h5 class="card-title">
        <strong>{{favoritedRestaurantCount}}</strong> 收藏的餐廳:</h5>
      {{#each user.FavoritedRestaurants}}
      <a href="/restaurants/{{this.id}}">
        <img src="{{this.image}}" alt="Card image cap" style="width: 80px; height: 80px">
      </a>
      {{/each}}
    </div>
  </div>

  <div class="card col-md-6">
    <div class="card-body">
      <h5 class="card-title"><strong>{{commentCount}}</strong> 已評論餐廳(不重複顯示):</h5>
      {{#each comments}}
      <a href="/restaurants/{{this.RestaurantId}}">
        <img src="{{this.restaurantImage}}" alt="Card image cap" style="width: 80px; height: 80px">
      </a>
      {{/each}}
    </div>
  </div>
</div>





