<h1>編輯個人資料</h1>

<div class="row">
  <div class="card  col-md-12">
    <div class="d-flex">
      <div class="image col-md-6">
        <img class="card-img-top" src="{{user.image}}" alt="Card image cap">
      </div>
      <div class="col-md-6 mt-2 ml-2">
        <ul class="list-unstyled ">
          <li class="mt-2"><strong>使用者名稱:</strong> {{user.name}}</li>
          <li class="mt-2"><strong>Email:</strong> {{user.email}}</li>
          <li class="mt-2"><strong>權限:</strong>
            {{#ifCond user.isAdmin true}}
            管理員
            {{else}}
            一般使用者
            {{/ifCond}}
          </li class="mt-2">
          {{#if count}} {{count}}個已評論餐廳 {{/if}}
          <li class="mt-2"><strong>帳號建立時間:</strong> {{momentDate user.createdAt}}</li>
          <li class="mt-2"><strong>上次更新:</strong> {{moment user.updatedAt}}</li>
          {{#ifCond edit true}}
          <button type="button" class="btn btn-outline-link mt-2">
            <a href="/users/{{user.id}}/edit">編輯</a>
          </button>
          {{/ifCond}}
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="row mt-2">
  <div class="card col-md-12">
    <div class="card-body">
      <h5 class="card-title">{{count}}個評論:</h5>

      {{#each comments}}
      <div class="card col-md-12 mt-2">
        <div class="d-flex">
          <div class="col-md-4">
            <img class="card-img-top" src="{{this.restaurantImage}}" alt="Card image cap">
          </div>
          <div class="col-md-8"><a href="/restaurants/{{this.RestaurantId}}">
              <strong>{{this.restaurantName}}</strong>
            </a>

            <div>評論內容:</div>
            <div class="mt-2">{{this.text}}</div>
          </div>
        </div>
      </div>
      {{/each}}

    </div>
  </div>

</div>

<a href="javascript:history.back()">回上一頁</a>